<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="12dp"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"

            android:background="#4A513495">

            <ImageView
                android:id="@+id/image_track_card"
                android:layout_width="156dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/artist_weekend" />

            <TextView
                android:id="@+id/title_track_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WeekEND_loly_pop"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/path_track_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://hitster.fm/adam/zhurek-isko-alvarez-remix"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"

                android:layout_marginTop="5dp">


                <ImageButton
                    android:id="@+id/btn_to_hear"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="140dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="done"
                    android:src="@drawable/baseline_library_music_24"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>